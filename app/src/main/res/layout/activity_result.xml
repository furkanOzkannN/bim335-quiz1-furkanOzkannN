<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".ResultActivity">

    <TextView
        android:id="@+id/confettiText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="🎉 🎊 ✨"
        android:textSize="48sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/winnerCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="12dp"
        app:layout_constraintTop_toBottomOf="@id/confettiText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/winnerImageView"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:src="@drawable/winner_image"
                android:contentDescription="Winner"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🏆 KAZANAN 🏆"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/primary_purple"
                android:layout_marginTop="24dp"
                android:fontFamily="sans-serif-black"/>

            <TextView
                android:id="@+id/winnerTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oyuncu 1"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/button_player1"
                android:layout_marginTop="12dp"
                android:fontFamily="sans-serif-medium"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tebrikler! Harika bir oyun sergiledi!"
                android:textSize="16sp"
                android:textColor="@color/text_dark"
                android:textAlignment="center"
                android:layout_marginTop="12dp"
                android:alpha="0.8"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Tekrar Başla Butonu -->
    <Button
        android:id="@+id/resetGameButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/reset_game"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/text_dark"
        android:background="@drawable/button_rounded"
        android:elevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/winnerCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="32dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="⭐ ⭐ ⭐ ⭐ ⭐"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>